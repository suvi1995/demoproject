pipeline {
    agent any 
    
    tools{
        jdk 'jdk'
        maven 'maven'
    }
    
    environment {
        SCANNER_HOME=tool 'sonar-scanner'
        registry = '897886641913.dkr.ecr.us-east-1.amazonaws.com/demoproject'
    }
    
    stages{
        
        stage("Git Checkout"){
            steps{
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/suvi1995/demo.git'
            }
        }
        
        stage("Compile"){
            steps{
                sh "mvn clean compile"
            }
        }
        
         stage("Test Cases"){
            steps{
                sh "mvn test"
            }
        }
        
        stage("Sonarqube Analysis "){
            steps{
                    sh " mvn clean package "
                    sh ''' mvn clean verify sonar:sonar \
                       -Dsonar.projectKey=demo \
                       -Dsonar.projectName='demo' \
                       -Dsonar.host.url=http://34.224.29.119:9000 \
                       -Dsonar.token=sqp_3fb776cabf031c4bcc58f3102c76e28168b79bee '''
            }
        }
        stage("Build"){
            steps{
                sh "mvn clean install"
            }
        }
        
        stage('Docker Build') {
            steps {
               script {
                  dockerImage = docker.build registry 
                  dockerImage.tag("$BUILD_NUMBER")
              }
            }
        }

        stage('Docker Push') {
            steps {
                script {
                sh 'aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 897886641913.dkr.ecr.us-east-1.amazonaws.com'
                sh'docker build -t demoproject .'
                sh 'docker push 897886641913.dkr.ecr.us-east-1.amazonaws.com/my-docker-repo:$BUILD_NUMBER'
              }
               
            }
        }
        
    }
}
